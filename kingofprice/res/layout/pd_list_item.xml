<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/pd_ll_itemname"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/modify_background2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pd_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/manufacturer_grey_text_button"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_price"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/modify_background2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pd_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/manufacturer_grey_text_button"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
